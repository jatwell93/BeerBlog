<h1>Calender Items</h1>

<%= link_to 'New item', new_calender_url %> 

<% @calender_items.each do |item| %>
  <h2><%= link_to item.title, calender_show_path(calender_item) %></h2>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%= image_tag item.thumb_image %>
  <%= link_to "Edit item", edit_calender_path(calender_item) %>
  <%= link_to 'Destroy', calender(calender_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %> 

